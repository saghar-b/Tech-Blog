<div class=" align-center mb-5 d-flex">
  <div class="col-6">

    <div class="card">
      <a href="/dashboard/edit/{{blog.id}}">
      <div class="card-header ">
        {{blog.title}}
        <div>
          Created at:
          {{../time}}
        </div>
      </div>

      <div class="card-body">
        {{blog.post}}
      </div>
      </a>
    </div>

    <a id="smalbtn" href="javascript:deletePost({{blog.id}})">delete</a>
    <a id="smalbtn" href="/dashboard/edit/{{blog.id}}">update</a>

  </div>

</div>
{{/each}}



<h3>
  <a id="newPost" href="/dashboard/new"> New Post</a>
</h3>
