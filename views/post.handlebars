<div class="row align-center mb-5">
  <div class="col-md-6">



    <div class="card">
      <div class="card-header col">
        <div class=" ">
          {{blog.title}}
        </div>
        <div>
         Created by:
          {{blog.user.username}}
        </div>
        <div>
         Created at:
          {{blog.createdAt}}
        </div>
      </div>
      <div class="card-body">
        {{blog.post}}
      </div>



    </div>
    <div class="b-3">
      <h4>Comments:</h4>
      {{#each coments as | comment|}}
      <ul>
        <li>
          {{comment.comment}}
        </li>
      </ul>

      {{/each}}
    </div>

    <h4>New Comments</h4>
    <textarea id="commentBody" cols="50" rows="3"></textarea>
    <input type="text" style="display:none" id="postId" value={{blog.id}}>
    <button id="commentBtn"> Add Comment</button>

    <div class="col-md-6">

    </div>
  </div>

  <script src="/js/comment.js"></script>