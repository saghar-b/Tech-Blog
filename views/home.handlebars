<div class="row align-center mb-5">
  <div class="col-md-6">
    
    {{#each blogs as | blog|}}
    <a href="/post/{{blog.id}}">
    <div class="card">
      <div class="card-header col">
        <div class=" ">
          {{blog.title}}
        </div>
        <div>
         Created by:
          {{blog.user.username}}
        </div>
        <div>
         Created at:
          {{blog.createdAt}}
        </div>
      </div>
      <div class="card-body">
        {{blog.post}}
      </div>
</a>

    </div>
    {{/each}}

  </div>
  <div class="col-md-6">

  </div>
</div>